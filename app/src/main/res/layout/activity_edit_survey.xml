<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/editTextSurveyTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Survey Title"
        android:textSize="18sp"
        android:padding="8dp" />

    <EditText
        android:id="@+id/editTextSurveyDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Survey Description"
        android:textSize="18sp"
        android:padding="8dp"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/buttonUpdateSurvey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Survey"
        android:layout_marginTop="16dp"
        android:layout_gravity="center" />

    <Button
        android:id="@+id/buttonAddQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Question"
        android:layout_marginTop="16dp"
        android:layout_gravity="center" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewQuestions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"/>
</LinearLayout>
